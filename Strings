main=[]
n=int(input("Enter no of strings:"))
for i in range(n):
    str1=input("Enter the strings:")
    main.append(str1)
    
    
def length():
    lar=0
    for i in main:
        if len(i)>lar:
            lar=len(i)
            fin=i
    print("The longest word:",fin)

def frequency():
    x=int(input("Select the string number:"))
    sub=main[x-1]
    y=input("Enter the letter to count occurence:")
    for i in sub:
        fre=sub.count(y)
    print("Frequency:",fre)
    
def palindrome():
    x=input("Enter the string to chech palindrome:")
    y=int(input("Select the string number:"))
    str1=main[y-1]
    str2=str1[::-1]
    if str2==x:
        print("Strings are palindrome")
    else:
        print("Strings are not palindrome")
        
def index():
    x=int(input("Select the string number:"))
    sub=main[x-1]
    y=input("Enter the letter to check index:")
    cn=0
    ind=0
    for i in sub:
        cn+=1
        if i==y:
            ind=cn
            break
    print("Index:",ind)
    
    
def occurance():
    x=int(input("Select the string number:"))
    sub=main[x-1]
    dict1={}
    for i in sub:
        keys=dict1.keys()
        if i in keys:
            dict1[i]+=1
        else:
            dict1[i]=1
    print("Occurence of each letter:",dict1)
    
def mainmenu():
    print("\n1.longest word\n2.Frequency\n3.Palindrome\n4.Index\n5.Occurence of each word\n6.Exit")
    
    
    
while True:
        mainmenu()
        ch=int(input("Enter a choice:"))
        if ch==1:
            length()
        elif ch==2:
            frequency()
        elif ch==3:
            palindrome()
        elif ch==4:
            index()
        elif ch==5:
            occurance()
        elif ch==6:
            False
            break
        else:
            print("Enter a valid choice")
    
    

        
