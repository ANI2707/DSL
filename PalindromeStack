#include<bits/stdc++.h>
using namespace std;
#define N 50
class Stack{
    public:
    char arr[N],top;
    Stack(){
        top=-1;
    }
    void push(char n){
        if(top==N-1){
            cout<<"Stack Overflow";
        }
        else{
            top=top+1;
            arr[top]=n;
        }
    }
    char pop(){
        if(top==-1){
            cout<<"Stack Underflow";
            return -1;
        }
        else{
            char item=arr[top];
            top=top-1;
            return item;
        }
    }
    int peek(){
        return top;
    }
    void palindrome(string str1,string str2){
        int count=0;
        for(int i=0;i<str1.size();i++){
            if(str1[i]==str2[i]){
                count++;
            }
        }
        if(count==str1.size()){
            cout<<"String is palindrome";
        }
        else{
            cout<<"String is not palindrome";
        }
    }
};
int main(){
    Stack s;
    string str;
    cout<<"Enter a string:";
    getline(cin,str);
    string str1="";
    for(int i=0;i!=str.size();i++){
        char ch=str[i];
        if(ch>='a' && ch<='z'){
            s.push(ch);
            str1.push_back(ch);
        }
    }
    string str2="";
    for(int i=s.peek();i>=0;i--){
        char ch=s.pop();
        str2.push_back(ch);
    }
    
    cout<<"Original String:"<<str<<endl;
    cout<<"Converted String:"<<str1<<endl;
    cout<<"Palindrome String:"<<str2<<endl;
    s.palindrome(str1,str2);
    return 0;
    
}
