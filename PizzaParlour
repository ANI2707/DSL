#include<bits/stdc++.h>
using namespace std;
#define MAX 5
class cqueue{
    public:
    int r,f,arr[MAX];
    cqueue(){
        f=r=-1;
    }
    bool addorder(int id){
        if((r+1)%MAX==f){
            cout<<"\nPizza Parlour is Full!";
            return false;
        }
        else if(f==-1 && r==-1){
            r=f=0;
            arr[r]=id;
            return true;
        }
        else{
            r=(r+1)%MAX;
            arr[r]=id;
            return true;
        }
        
    }
    
    void serveorder(){
        if(f==-1 && r==-1){
            cout<<"\nNo orders in pizza parlour";
            return;
        }
        else{
            cout<<"\nOrder No."<<arr[f]<<"is being processed.\n";
            if(f==r){
                f=r=-1;
            }
            else{
                f=(f+1)%MAX;
            }
            
        }
    }
    
    void display(){
        if(f==-1 && r==-1){
            cout<<"Pizza Parlour is empty!";
            return;
        }
        else{
            cout<<"Order id's:"<<endl;
            for(int i=f;i!=r;i=(i+1)%MAX){
                cout<<arr[i]<<endl;
                
            }
            cout<<arr[r];
        }
    }
};

int main(){
    cqueue q;
    int ch,id=0;
    do{
        cout<<"\n-------PIZZA PARLOUR--------\n-------MENU--------\n1.Accept Order\n2.Serve Ordr\n3.Display Orders\n4.Exit";
        cout<<"\nEnter a choice:";
        cin>>ch;
        switch(ch){
        case 1:
            id++;
            if(q.addorder(id)){
                cout<<"Thank You for the order.Order id is:"<<id;
            }
            else{
                id--;
            }
            break;
        case 2:
        q.serveorder();
        break;
        case 3:
        q.display();
        break;
        }
    }
    while(ch!=4);
    return 0;
}

